<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.myflowerproject">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/main_activity_background"
        android:label="Camelia Florist"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:targetApi="n">
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/ic_stat_ic_notification" />
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/colorAccent" />
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_channel_id"
            android:value="@string/default_notification_channel_id" />

        <activity android:name=".ProductDetail"></activity>
        <activity android:name=".MyOrder" />
        <activity android:name=".model.entity.OrderActivity" />
        <activity
            android:name=".view.HomeActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.Notification"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.MyAccount"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.ChangePassword"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".fragment.SignIn"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".fragment.HomeFragment"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".fragment.ListItem"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".fragment.SignUp"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".fragment.ResetPassword"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.ProductDetailActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.MyCartActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/MainTheme"
            tools:ignore="LockedOrientationActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.RegisterActivity"
            android:screenOrientation="portrait"
            tools:ignore="LockedOrientationActivity" />
    </application>

</manifest>